{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "db:generate": {
            "cache": false,
            "inputs": [
                "packages/database/prisma/schema.prisma"
            ]
        },
        "db:push": {
            "cache": false,
            "dependsOn": [
                "db:generate"
            ]
        },
        "build": {
            "dependsOn": [
                "^build",
                "db:generate"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "db:generate"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        }
    }
}