generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  metadata  Json?    // For customizations (colors, logos, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages  Message[]
  logs      SystemLog[]
  devices   NasDevice[]
}

model NasDevice {
  id        String   @id @default(uuid())
  nasId     String?  @unique
  vpnIp     String?  @unique
  publicIp  String?  @unique
  bssid     String?  @unique   // WiFi AP BSSID for native app detection
  name      String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
  messages      Message[]

  @@map("user") // Better-auth standard
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session") // Better-auth standard
}

model Account {
  id                    String    @id @default(uuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account") // Better-auth standard
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification") // Better-auth standard
}

model Message {
  id           String   @id @default(uuid())
  text         String
  createdAt    DateTime @default(now())
  
  // Legacy fields for Guest/Socket users
  senderId     String
  senderAlias  String
  senderGender String
  recipientId  String?  // For private messages

  // Optional link to specific authenticated user (if later integrated)
  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  tenantId     String
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([recipientId])
  @@index([senderId])
}

model SystemLog {
  id        String   @id @default(uuid())
  event     String
  details   Json?
  createdAt DateTime @default(now())

  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
}
