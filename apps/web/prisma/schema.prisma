generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  metadata  Json?    // For customizations (colors, logos, etc.)
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Hardware logic for Double-Lock security
  bssid     String?  // Router BSSID
  staticIp  String?  // Fixed Public IP of the location

  members   TenantMember[]
  messages  Message[]
  rooms     Room[]
  logs      SystemLog[]
  devices   NasDevice[]
}

model NasDevice {
  id        String   @id @default(uuid())
  nasId     String?  @unique
  vpnIp     String?  @unique
  publicIp  String?  @unique
  bssid     String?  @unique   // WiFi AP BSSID for native app detection
  name      String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean?
  image         String?
  phoneNumber   String?
  gender        String?
  isAnonymous   Boolean   @default(false)
  role          GlobalRole @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  memberships   TenantMember[]
  sessions      Session[]
  accounts      Account[]
  messages      Message[]
  passkeys      Passkey[]

  @@map("user") // Better-auth standard
  @@index([createdAt])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session") // Better-auth standard
}

model Account {
  id                    String    @id @default(uuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account") // Better-auth standard
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification") // Better-auth standard
}

enum GlobalRole {
  SUPERADMIN
  USER
}

enum TenantRole {
  ADMIN      // Can pay, manage members, manage everything
  MODERATOR  // Can moderate messages
  STAFF     // Can manage orders (future)
}

model TenantMember {
  id        String   @id @default(uuid())
  userId    String
  tenantId  String
  role      TenantRole @default(MODERATOR)
  
  // Granular permission flags
  canModerate     Boolean @default(false)
  canManageOrders Boolean @default(false)
  canViewStats    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
}

enum RoomType {
  ANNOUNCEMENT
  GENERAL
}

model Room {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        RoomType @default(GENERAL)
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  messages    Message[]
  createdAt   DateTime @default(now())
}

model Message {
  id           String   @id @default(uuid())
  text         String
  createdAt    DateTime @default(now())
  
  // Legacy fields for Guest/Socket users
  senderId     String
  senderAlias  String
  senderGender String
  recipientId  String?  // For private messages
  
  // New Room Relation
  roomId       String?  // Optional for now to ease migration/private chats? PRD says 'roomId String'. 
  // Wait, PRD implies Messages belong to Rooms. Private messages (recipientId set) might not be in a "Room" or maybe "DirectMessage" room?
  // Current system has "Global Chat" and "Private Chat".
  // PRD says "Refactor the main tab to show a list of rooms".
  // Private chats are separate tab? Or integrated?
  // "Tab 1: Room List... Tab 2: Users... Tab 3: Chats (Private)"?
  // PRD doesn't mention changing Private Chats structure, only "Multi-Room System & Broadcast".
  // So Global Chat becomes Multi-Rooms. Private chats remain as is?
  // If so, Message needs to support EITHER Room OR Recipient.
  // schema logic: Room Message vs Private Message.
  
  room         Room?    @relation(fields: [roomId], references: [id], onDelete: Cascade)

  // Optional link to authenticated user
  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Tenant ID is still useful for security scoping/direct lookups, but room implies tenant.
  // PRD snippet removed tenantId from Message and used Room.
  // But Private Messages don't have a Room (unless we create DM rooms).
  // Current 'PrivateChat' is ad-hoc based on recipientId.
  // I will Keep tenantId for Private Messages, and make roomId optional (for private msgs) or mandatory for Group msgs.
  // Actually, PRD snippet: "Update Message model to link to Room instead of Tenant".
  // It might be referring only to the Room messages.
  // I'll keep tenantId to avoid breaking Private Chats for now, but add roomId.
  tenantId     String
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([roomId])
  @@index([recipientId])
  @@index([senderId])
  @@index([createdAt])
}

model SystemLog {
  id        String   @id @default(uuid())
  event     String
  details   Json?
  createdAt DateTime @default(now())

  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
}

model Passkey {
  id           String    @id
  name         String?
  publicKey    String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID String
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  aaguid       String?
  createdAt    DateTime?

  @@map("passkey")
}
