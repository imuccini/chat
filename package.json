{
    "name": "chatapp",
    "private": true,
    "packageManager": "npm@10.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "turbo run dev --filter=@local/web",
        "dev:api": "turbo run dev --filter=@local/api",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "db:generate": "turbo run db:generate",
        "db:push": "turbo run db:push"
    },
    "devDependencies": {
        "turbo": "^2.3.0"
    }
}