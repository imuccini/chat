{
    "name": "chatapp",
    "private": true,
    "packageManager": "npm@10.9.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "turbo run dev --filter=@local/web",
        "dev:api": "turbo run dev --filter=@local/api",
        "dev:marketing": "turbo run dev:marketing --filter=@local/web",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "db:generate": "turbo run db:generate",
        "db:push": "turbo run db:push",
        "postinstall": "patch-package"
    },
    "devDependencies": {
        "patch-package": "^8.0.1",
        "turbo": "^2.3.0"
    },
    "optionalDependencies": {
        "@esbuild/darwin-arm64": "^0.27.3"
    }
}
